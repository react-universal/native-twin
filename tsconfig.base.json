{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "sourceMap": true,
    "declaration": true,
    "importsNotUsedAsValues": "error",
    "declarationMap": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": false,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmit": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "rootDir": ".",
    "paths": {
      "@universal-labs/stylesheets": ["packages/sheets/src/index.ts"],
      "@universal-labs/core": ["packages/core/src/index.ts"],
      "@universal-labs/styled": ["packages/styled/src/index.ts"],
      "@universal-labs/primitives": ["packages/primitives/src/index.ts"]
    }
  },
  "exclude": ["tmp", "node_modules", "**/build**"]
}
