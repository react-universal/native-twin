{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "importsNotUsedAsValues": "error",
    "declarationMap": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmit": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@universal-labs/core": ["./packages/core/src/index.ts"],
      "@universal-labs/stylesheets": ["./packages/stylesheets/src/index.ts"],
      "@universal-labs/styled": ["./packages/styled/src/index.ts"],
      "@universal-labs/primitives": ["./packages/primitives/src/index.ts"],
      "@universal-labs/tailwind-ui": ["./packages/tailwind-ui/src/index.ts"],
    },
  },
  "exclude": ["tmp", "node_modules", "**/build**"]
}
