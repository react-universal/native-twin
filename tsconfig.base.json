{
  "extends": "expo-module-scripts/tsconfig.base",
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "types": ["jest", "jest-require"],
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@react-universal/expo-module": ["packages/expo-module/src/index.ts"],
      "@react-universal/nativewind.core": ["packages/core/nativewind.core/src/index.ts"],
      "@react-universal/nativewind.view": ["packages/primitives/nativewind.view/src/index.ts"]
    }
  },
  "exclude": ["tmp", "node_modules"]
}
