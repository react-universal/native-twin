{
  "name": "native-twin",
  "version": "0.0.0-development",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/react-universal/native-twin.git"
  },
  "license": "MIT",
  "author": "Cristhian Gutierrez",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:release": "yarn build && yarn libs:foreach pack && yarn libs:foreach exec \"mkdir _release && tar zxvf package.tgz --directory _release && rm package.tgz\"",
    "build:watch": "turbo run build:watch",
    "clean": "rimraf -g packages/*/build",
    "docs:build": "turbo run docs:build",
    "example:expo": "yarn workspace expo-app run start",
    "extension:dev": "turbo run vscode:dev",
    "format": "prettier --write packages apps examples \"**/*.{js,ts,tsx,md}\"",
    "libs:foreach": "yarn workspaces foreach --all --no-private --verbose",
    "lint": "turbo run lint",
    "nextjs:pages:dev": "turbo run nextjs:pages:dev",
    "release": "yarn build:release && changeset publish",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@nx/eslint": "18.2.2",
    "@nx/eslint-plugin": "18.2.2",
    "@testing-library/react-native": "^12.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@tsconfig/react-native": "^3.0.5",
    "@types/chai": "4.3.5",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@welldone-software/why-did-you-render": "^8.0.1",
    "chai": "4.3.7",
    "concurrently": "^7.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "glob": "^8.1.0",
    "jest": "^29.7.0",
    "jest-expo": "^51.0.3",
    "mocha": "^10.2.0",
    "prettier": "^3.2.5",
    "react-test-renderer": "18.2.0",
    "rimraf": "^5.0.7",
    "tslib": "^2.6.3",
    "turbo": "^2.0.3",
    "typescript": "~5.3.3"
  },
  "packageManager": "yarn@4.2.2",
  "overrides": {
    "@babel/types": "7.23.9",
    "@babel/core": "7.23.9"
  }
}
