{
  "name": "universal-labs",
  "version": "0.0.0-development",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/react-universal/tailwind.git"
  },
  "license": "MIT",
  "author": "Cristhian Gutierrez",
  "workspaces": [
    "packages/*",
    "examples/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build --filter='./packages/*'",
    "build:release": "yarn build && yarn libs:foreach pack && yarn libs:foreach exec \"mkdir _release && tar zxvf package.tgz --directory _release && rm package.tgz\"",
    "build:watch": "turbo run build:watch --filter='./packages/*'",
    "example:next-pages": "turbo run dev --filter='next-pages-example'",
    "expo:android": "yarn workspace expo-app run android",
    "expo:ios": "yarn workspace expo-app run ios",
    "expo:start": "yarn workspace expo-app run start",
    "format": "prettier --write packages apps examples \"**/*.{js,ts,tsx,md}\"",
    "libs:foreach": "yarn workspaces foreach --no-private --verbose",
    "lint": "turbo run lint",
    "release": "yarn build:release && changeset publish",
    "site:dev": "turbo run dev --project=site",
    "test": "turbo test --continue"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@testing-library/react-native": "^12.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@tsconfig/react-native": "^3.0.2",
    "@types/chai": "4.3.5",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "@vscode/test-electron": "^2.3.2",
    "chai": "4.3.7",
    "concurrently": "^7.6.0",
    "esbuild": "^0.19.5",
    "eslint": "~8.15.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "glob": "^8.1.0",
    "jest": "^29.3.1",
    "jest-expo": "^49.0.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.3",
    "react-test-renderer": "18.2.0",
    "tslib": "^2.6.0",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  },
  "packageManager": "yarn@3.6.3"
}
