{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": [
        "build/**"
      ],
      "dependsOn": [
        "^build"
      ],
      "cache": true
    },
    "dev": {
      "outputs": [
        "build/**"
      ],
      "persistent": true,
      "cache": false
    },
    "lint": {
      "outputs": [
        "dist/**",
        "build/**"
      ]
    }
  }
}
