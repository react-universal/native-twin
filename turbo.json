{
  "$schema": "https://turbo.build/schema.json",
  
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": ["$TURBO_DEFAULT$","!**/test","!**/tests"],
      "outputs": [
        "build/**",
        "dist/**"
      ]
    },
    "dev-tools:dev": {
      "cache": false,
      "persistent": true,
      "interactive": true,
      "inputs": ["$TURBO_DEFAULT$","!**/test", "!**/tests", "**/webui/**/*"],
      "outputs": [
        "build/**",
        "dist/**"
      ]
    },
    "mobile:dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true,
      "interactive": true
    },
    "build:watch": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "cache": true
    },
    "clean": {
      "cache": false
    },
    "next:app:dev": {
      "cache": false,
      "interactive": true,
      "outputLogs": "full",
      "persistent": true,
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "build/**"
      ]
    },
    "docs:dev": {
      "cache": false,
      "interactive": true,
      "outputLogs": "full",
      "persistent": true,
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "build/**"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ]
    }
  }
}