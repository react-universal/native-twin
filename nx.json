{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "affected": {
    "defaultBase": "main"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx-cloud",
      "options": {
        "cacheableOperations": ["build:libs"],
        "accessToken": "ZDQ5MzNlNjAtODM2Ny00NGE5LWIzZDEtM2VlYmZmMGE3ZjQ4fHJlYWQtd3JpdGU="
      }
    }
  },
  "cli": {
    "packageManager": "yarn"
  },
  "targetDefaults": {
    "build:libs": {
      "inputs": ["production"],
      "outputs": ["{projectRoot}/build"],
      "dependsOn": ["^build:libs", "build:libs"]
    }
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": true
    }
  },
  "namedInputs": {
    "default": ["sharedGlobals"],
    "sharedGlobals": [
      "!{projectRoot}/test/**/*",
      "!{projectRoot}/build/**/*",
      "{projectRoot}/src/**/*",
      "{projectRoot}/vite.config.*",
      "{projectRoot}/tsconfig.*",
      "{projectRoot}/package.json"
    ],
    "production": ["default"]
  }
}
