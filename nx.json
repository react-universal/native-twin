{
  "workspaceLayout": {
    "libsDir": "packages",
    "appsDir": "apps"
  },
  "cli": {
    "packageManager": "yarn"
  },
  "npmScope": "react-universal",
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "test"
        ],
        "accessToken": "MzRlMGEwODktNGE4Zi00MTA4LWFlNzYtOGQwZmI0ZWVlMGNifHJlYWQtd3JpdGU="
      }
    }
  },
  "defaultBase": "main",
  "targetDefaults": {
    "test": {
      "inputs": [
        "default",
        "^default",
        "{workspaceRoot}/jest.preset.js"
      ]
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json"
      ]
    }
  },
  "generators": {
    "@nrwl/react": {
      "application": {
        "babel": true
      },
      "library": {
        "unitTestRunner": "jest"
      }
    }
  }
}
