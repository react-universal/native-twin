// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension Server",
      "type": "node",
      "request": "attach",
      "sourceMaps": true,
      "preLaunchTask": {
        "type": "npm",
        "script": "build:tsc:watch"
      },
      "outFiles": [
        "${workspaceRoot}/build/**/*.js"
      ]
    }
  ],
}