{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declarationMap": false,
    "jsx": "react-jsx",
    "outDir": "./build",
    "sourceMap": false,
    "noEmit": false,
    "module": "ES2020",
    "exactOptionalPropertyTypes": false,
    "importHelpers": true,
    "plugins": [
      {
        "name": "@universal-labs/ts-plugin-tw",
        "tags": ["styled", "css", "styledComponents"]
      }
    ]
  },
  "include": ["src", "test", "vite.config.*"]
}
