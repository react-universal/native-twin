{
  "name": "tailwind-adapter",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/tailwind-adapter/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/tailwind-adapter/build"
      }
    },
    "publish": {
      "command": "yarn npm publish",
      "dependsOn": ["^build"]
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/packages/tailwind-adapter"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/tailwind-adapter"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/tailwind-adapter/**/*.ts"]
      }
    }
  },
  "tags": ["adapters", "lib"]
}
