{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declarationMap": false,
    "strictFunctionTypes": false,
    "noImplicitAny": true,
    "lib": [
      "ESNext"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "src",
    "test",
    "./*.d.ts"
  ],
  "exclude": [
    "build",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}