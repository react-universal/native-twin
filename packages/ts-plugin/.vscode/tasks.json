{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch:compile",
      "problemMatcher": [
        {
          "base": "$tsc-watch",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting compilation in watch mode",
            "endsPattern": "Watching\\sfor\\sfile\\schanges\\."
          }
        }
      ],
      "isBackground": true
    }
  ]
}
