// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Lanuch extension + TS Plugin",
      "configurations": [
        "Launch Extension",
        "Launch Extension Server"
      ],
      "presentation": {
        "hidden": false,
        "group": "tools",
        "order": 2
      },
      "preLaunchTask": "npm: build:tsc:watch"
    },
    {
      "name": "Lanuch extension Client + Server",
      "configurations": [
        "Launch Extension",
        "Launch Extension Server"
      ],
      "presentation": {
        "hidden": false,
        "group": "tools",
        "order": 1
      },
      "preLaunchTask": "npm: build:tsc:watch"
    }
  ],
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Launch Extension",
      "runtimeExecutable": "${execPath}",
      "autoAttachChildProcesses": true,
      "preLaunchTask": {
        "type": "npm",
        "script": "build:tsc:watch"
      },
      "presentation": {
        "hidden": true,
        "group": "",
        "order": 1
      },
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--disable-extensions"
      ],
      "outFiles": [
        "${workspaceRoot}/build/**/*.js",
        "${workspaceRoot:}/build/**/*.js"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/../**",
        "!**/node_modules/**"
      ],
      // "sourceMapPathOverrides": {
      //   "ðŸ“¦ @lib/ts-plugin": "${workspaceFolder}../ts-plugin/*"
      // }
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/build/test/run"
      ],
      "preLaunchTask": {
        "type": "npm",
        "script": "build:tsc:watch"
      },
      "outFiles": ["${workspaceFolder}/build/test/**/*.js"]
    }
  ],
}