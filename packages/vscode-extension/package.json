{
  "name": "@native-twin/vscode",
  "version": "1.0.0",
  "private": true,
  "description": "Native Twin vscode extension.",
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "license": "MIT",
  "author": "Cristhian Gutierrez",
  "publisher": "native-twin",
  "main": "./build/extension.js",
  "scripts": {
    "build": "node ./build.js --production",
    "build:tsc": "tsc -b",
    "build:tsc:watch": "tsc -b -w",
    "clean": "rm -rf build",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "echo \"TEST\"",
    "vscode:dev": "tsc -b -w",
    "vscode:prepublish": "node ./build.js"
  },
  "contributes": {
    "commands": [
      {
        "command": "nativeTwin.restart",
        "title": "Native Twin: Restart IntelliSense"
      },
      {
        "command": "nativeTwin.className",
        "title": "Native Twin: Replace className strings"
      }
    ],
    "configuration": [
      {
        "id": "nativeTwin",
        "title": "Native Twin Configuration",
        "type": "object",
        "properties": {
          "nativeTwin.tags": {
            "type": "array",
            "description": "List of template tags to enable Native Twin intellisense in.",
            "items": {
              "type": "string",
              "description": "Tag name."
            },
            "default": [
              "tw",
              "apply",
              "css",
              "variants",
              "styled",
              "tx"
            ]
          },
          "nativeTwin.attributes": {
            "type": "array",
            "description": "List of html/jsx attributes to enable Native Twin intellisense in.",
            "items": {
              "type": "string",
              "description": "Attribute name."
            },
            "default": [
              "className",
              "class"
            ]
          },
          "nativeTwin.styles": {
            "type": "array",
            "description": "List of style/styled functions to enable Native Twin intellisense in.",
            "items": {
              "type": "string",
              "description": "Style function name."
            },
            "default": [
              "style",
              "styled",
              "variants"
            ]
          },
          "nativeTwin.debug": {
            "type": "boolean",
            "description": "Enable/disable additional debug information.",
            "default": false
          },
          "nativeTwin.enable": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Controls whether Native Twin intellisense is enabled or not."
          },
          "nativeTwin.trace.server": {
            "scope": "window",
            "type": "string",
            "enum": [
              "off",
              "messages",
              "verbose"
            ],
            "default": "off",
            "description": "Traces the communication between VS Code and the language server."
          }
        }
      }
    ]
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "dependencies": {
    "@effect/experimental": "0.14.12",
    "@effect/schema": "^0.64.20",
    "@native-twin/ts-plugin": "workspace:*",
    "effect": "^2.4.18",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@types/vscode": "1.80.0",
    "@vscode/test-electron": "^2.3.3",
    "vscode-test": "1.6.1"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}
