{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "sourceMap": true,
    "noEmit": false,
    "strict": true,
    "composite": true,
    "outDir": "out",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}
