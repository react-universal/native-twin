{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "ExpoModule",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    }, 
    "scope": {
      "type": "string",
      "enum": ["primitives", "core"],
      "default": "primitives",
      "description": "A directory where the project is placed"
    }
  },
  "required": ["name", "scope"]
}
