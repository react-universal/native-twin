{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declarationMap": false,
    "noImplicitAny": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "target": "esnext"
  },
  "include": ["src", "test"],
  "exclude": ["build"]
}
