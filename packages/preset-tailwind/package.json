{
  "name": "@native-twin/preset-tailwind",
  "version": "6.4.0",
  "description": "Tailwindcss StyleSheet generator for react native/web",
  "keywords": [
    "tailwind",
    "tailwindcss",
    "tailwind-native",
    "react-native-web",
    "universal-labs",
    "react-native",
    "react"
  ],
  "homepage": "https://github.com/react-universal/native-twin#readme",
  "bugs": {
    "url": "https://github.com/react-universal/native-twin/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-universal/native-twin",
    "directory": "packages/preset-tailwind"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "require": "./build/cjs/index.cjs",
      "import": "./build/esm/index.mjs",
      "types": "./build/types/index.d.ts"
    },
    "./colors": {
      "require": "./build/cjs/tailwind-theme/colors.cjs",
      "import": "./build/esm/tailwind-theme/colors.mjs",
      "types": "./build/types/tailwind-theme/colors.d.ts"
    }
  },
  "main": "./build/cjs/index.cjs",
  "module": "./build/esm/index.mjs",
  "types": "./build/types/index.d.ts",
  "files": [
    "build",
    "colors",
    "index.d.ts",
    "tailwind",
    "tailwind.d.ts",
    "types.d.ts",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "yarn twin build",
    "build:watch": "tsc -p tsconfig.build.json -w",
    "clean": "rm -rf build",
    "dev": "tsc -p tsconfig.build.json --watch --preserveWatchOutput",
    "lint": "eslint \"./**/*.{ts,tsx}\"",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@native-twin/core": "workspace:*"
  },
  "devDependencies": {
    "@native-twin/cli": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18.0",
    "react-native": ">=0.71.0"
  },
  "optionalDependencies": {
    "jest": "*"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  },
  "nx": {
    "includedScripts": [
      "build",
      "build:watch",
      "clean",
      "dev",
      "lint",
      "test:debug",
      "test:watch"
    ]
  }
}
