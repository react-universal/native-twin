{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2021"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "strict": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "build",
    "esbuild.mjs",
    "ts-extension"
  ],
  "include": ["src", "tests", "./*.d.ts"]
}