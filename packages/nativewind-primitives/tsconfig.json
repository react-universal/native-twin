{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "outDir": "./build/esm",
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./build/types",
    "lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "jsx": "react-jsx",
    "module": "ES6",
    "importHelpers": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*", "**/__stories__/*", "**/build/*"]
}
