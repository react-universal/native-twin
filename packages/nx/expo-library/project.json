{
  "name": "nx-expo-library",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nx/expo-library/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/nx/expo-library",
        "main": "packages/nx/expo-library/src/index.ts",
        "tsConfig": "packages/nx/expo-library/tsconfig.lib.json",
        "assets": [
          "packages/nx/expo-library/*.md",
          {
            "input": "./packages/nx/expo-library/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/nx/expo-library/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/nx/expo-library",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/nx/expo-library",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/nx/expo-library/**/*.ts",
          "packages/nx/expo-library/generators.json",
          "packages/nx/expo-library/executors.json",
          "packages/nx/expo-library/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/nx/expo-library/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": [
    "nx"
  ]
}
