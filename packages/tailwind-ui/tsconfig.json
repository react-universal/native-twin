{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
    "types": ["node", "vitest/globals"],
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "./build",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "module": "ES6",
    "importHelpers": true
  },
  "include": ["src","env.d.ts"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*", "**/__stories__/*", "**/build/*"]
}
