{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
    "types": ["cypress", "node", "vitest/globals"],
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "jsx": "react-jsx",
    "module": "ES6",
    "importHelpers": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "env.d.ts", "cypress", "test"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*", "**/__stories__/*", "**/build/*"]
}
