{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "build",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "noEmit": false,
    "strict": true /* enable all strict type-checking options */
