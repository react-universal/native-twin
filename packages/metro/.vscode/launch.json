{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Test Metro plugin",
      "program": "../../node_modules/jest/bin/jest",
      "args": [
        "--runInBand",
        "--silent=false",
        "--watchAll=false",
        "--detectOpenHandles=true"
      ],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "outFiles": [
        "${workspaceRoot}/build/**/*.js",
        "${workspaceRoot:}/build/**/*.js"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/../**",
        "${workspaceFolder}/../babel/**/*",
        "${workspaceFolder}/../compiler/**/*",
        "!**/node_modules/**"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**/*.js",
        "node_modules",
      ]
    }
  ]
}