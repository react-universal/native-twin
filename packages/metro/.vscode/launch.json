{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest",
      "program": "../../node_modules/jest/bin/jest",
      "args": [
        "--runInBand",
        "--silent=false",
        "--watch"
      ],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**/*.js",
        "node_modules",
      ]
    }
  ]
}